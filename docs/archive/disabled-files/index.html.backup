                    } else {
                        resultDiv.textContent = JSON.stringify(data, null, 2);
                    }
                    resultDiv.style.borderLeft = '4px solid #f44336';
                }
            } catch (error) {
                resultDiv.textContent = `Error: ${error.message}`;
                resultDiv.style.borderLeft = '4px solid #f44336';
            }
        }

        // Initialize
        checkStatus();

        // Auto-refresh status every 30 seconds
        setInterval(checkStatus, 30000);
