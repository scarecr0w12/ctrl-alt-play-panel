# Test Environment Configuration
# This file is used during automated testing and CI/CD

NODE_ENV=test
PORT=0
FRONTEND_PORT=0
AGENT_PORT=0
AUTO_PORT_DETECTION=true
PORT_RANGE_START=3000
PORT_RANGE_END=9999

# Database (mocked in tests)
DATABASE_URL=file:./test.db
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# Security (test keys)
JWT_SECRET=test-jwt-secret-key-for-github-actions-only
AGENT_SECRET=test-agent-secret-key-for-github-actions-only
SESSION_SECRET=test-session-secret

# External Services (disabled in tests)
STEAM_API_KEY=test-key
STEAM_API_ENABLED=false
MARKETPLACE_ENABLED=false

# Logging
LOG_LEVEL=error
LOG_FILE=false

# Testing specific
JEST_TIMEOUT=15000
MOCK_EXTERNAL_SERVICES=true
DISABLE_RATE_LIMITING=true

# Health checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Development
DEVELOPMENT_MODE=false
DEBUG_MODE=false