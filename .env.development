# Ctrl-Alt-Play Panel - Development Configuration
# This file is for development environments with flexible port assignment

NODE_ENV=development

# Dynamic Port Configuration (will auto-detect available ports if conflicts exist)
PORT=3000
FRONTEND_PORT=3001
AGENT_PORT=8080

# Database Configuration (flexible for shared development environments)
DATABASE_URL="postgresql://ctrlaltplay:ctrlaltplay@localhost:5432/ctrlaltplay_dev"
POSTGRES_PORT=5432

# Redis Configuration  
REDIS_URL="redis://localhost:6379"
REDIS_PORT=6379

# External URLs (auto-constructed from ports)
FRONTEND_URL=http://localhost:${FRONTEND_PORT:-3001}
PANEL_URL=http://localhost:${PORT:-3000}

# JWT Configuration
JWT_SECRET=dev-jwt-secret-change-in-production
JWT_EXPIRES_IN=7d

# Agent Communication
AGENT_SECRET=dev-agent-secret-change-in-production

# File Upload Configuration
MAX_FILE_SIZE=100MB
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=./logs/app-dev.log

# Security Configuration (relaxed for development)
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=1000

# Development Features
ENABLE_CORS=true
ENABLE_DEBUG_ROUTES=true
AUTO_MIGRATE=true

# Panel Configuration
PANEL_NAME="Ctrl-Alt-Play (Development)"
ADMIN_EMAIL=dev@localhost

# Port Conflict Resolution
AUTO_DETECT_PORTS=true
PORT_RANGE_START=3000
PORT_RANGE_END=3100